<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Name="RimNauts2_Module" ParentName="ResourceBase" Abstract="True">
        <possessionCount>2</possessionCount>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <stackLimit>1</stackLimit>
        <healthAffectsPrice>false</healthAffectsPrice>
        <intricate>true</intricate>
        <thingCategories>
            <li>Manufactured</li>
        </thingCategories>
        <allowedArchonexusCount>2</allowedArchonexusCount>
        <graphicData>
            <texPath>Things/Items/RimNauts2_SatelliteModule</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <MarketValue>32</MarketValue>
            <Mass>50.0</Mass>
            <Flammability>1.6</Flammability>
        </statBases>
    </ThingDef>
    
    <ThingDef ParentName="RimNauts2_Module">
        <defName>RimNauts2_Module_Station</defName>
        <label>station module</label>
        <description>Station module for construction of a space station. Send it up into orbit with a rocket.</description>
        <graphicData>
            <texPath>Things/Items/RimNauts2_StationModule</texPath>
        </graphicData>
    </ThingDef>
    
    <ThingDef ParentName="RimNauts2_Module">
        <defName>RimNauts2_Module_Satellite</defName>
        <label>Relay Satellite module</label>
        <description>Essential for communication, the Relay Satellite acts as a signal conduit between other satellites, forming a vital part of your network's infrastructure. It operates without needing additional power, facilitating a cost-effective way to scale your satellite operations.</description>
    </ThingDef>
</Defs>

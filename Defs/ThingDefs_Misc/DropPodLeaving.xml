            <texPath>Things/Special/RimNauts2_DropPod_Satellite</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutFlying</shaderType>
            <drawSize>5</drawSize>
            <drawOffset>(0.0, 0.0, 1.3)</drawOffset>
        </graphicData>
    </ThingDef>

    <ThingDef ParentName="RimNauts2_DropPodLeaving">
        <defName>RimNauts2_DropPodLeaving_SpaceStation</defName>
        <label>Space station (leaving)</label>
        <graphicData>
            <texPath>Things/Special/RimNauts2_DropPod_SpaceStation</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutFlying</shaderType>
            <drawSize>5</drawSize>
            <drawOffset>(0.0, 0.0, 1.3)</drawOffset>
        </graphicData>
    </ThingDef>
</Defs>
